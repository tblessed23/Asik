<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recordings.PlayAudioActivity">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        app:default_artwork="@drawable/emanci3"
        android:layout_height="400dp" />

    <TextView
        android:id="@+id/titleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/play_audio_text_size"
        android:textColor="@color/brown"
        android:layout_marginLeft="@dimen/android_standard_sixteen"
        android:layout_marginStart="@dimen/android_standard_sixteen"
        android:layout_marginTop="@dimen/android_standard_sixteen"
        />
</LinearLayout>